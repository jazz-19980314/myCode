.navTabBox {
  color: #rgba 102, 102, 102, 1;
  width: 690rpx;
  height: 64rpx;
  background: #feffff;
  box-shadow: -2px -2px 4px 0px rgba(227, 238, 255, 0.5), 2px 2px 4px 0px rgba(0, 80, 193, 0.2);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.navTabBox .click {
  color: #0D80F7;
  border-bottom: 2px solid #0D80F7;
}
.navTabBox .longTab {
  width: 100%;
  height: 64rpx;
}
.navTabBox .longTab .longItem {
  height: 64rpx;
  width: 200rpx;
  display: inline-block;
  line-height: 64rpx;
  text-align: center;
  font-size: 14px;
  font-family: PingFangSC-Medium,PingFang SC;
  font-weight: 600;
}
.navTabBox .longTab .underlineBox {
  height: 3px;
  width: 20%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-content: center;
          align-content: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-transition: .5s;
  transition: .5s;
}
.navTabBox .longTab .underlineBox .underline {
  width: 84rpx;
  height: 4px;
  background-color: white;
}


.paymentType .paymentContent .paymentItem input {
  border-bottom: 1px solid #666666;
  width: 120rpx;
  margin-left: 10rpx;
}
.savebtn {
  width: 690rpx;
  height: 80rpx;
  margin: 40rpx auto;
  background: -webkit-linear-gradient(right, #0d80f7 0%, #02a0fe 100%);
  background: linear-gradient(270deg, #0d80f7 0%, #02a0fe 100%);
  border-radius: 4px;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  position: relative;
}
.savebtn .shadowbtn {
  width: 690rpx;
  height: 80rpx;
  margin: 0 auto;
  background: #FFFFFF;
  opacity: 0.7;
  border-radius: 4px;
  position: absolute;
  top: 0;
  left: 0;
}


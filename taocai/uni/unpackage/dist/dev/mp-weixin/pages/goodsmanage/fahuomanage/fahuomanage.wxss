  width: 100%;
  height: 340rpx;
  background-color: #FFFFFF;
  padding: 30rpx 60rpx 0 60rpx;
  margin: 20rpx 0;
}
.deliveryType .invoiceType {
  width: 100%;
  width: 100%;
  background-color: #FFFFFF;
  padding-top: 30rpx;
}
.deliveryType .invoiceType .invoiceContent {
  padding-bottom: 20rpx;
}
.deliveryType .invoiceType .invoiceContent .deliveryList {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  margin-top: 20rpx;
}
.deliveryType .invoiceType .invoiceContent .deliveryList .deliveryInfo {
  margin-left: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.deliveryType .invoiceType .invoiceContent .deliveryList .deliveryInfo .cu-form-group {
  width: 94rpx;
  min-height: 50rpx;
  padding: 0;
  box-sizing: border-box;
}
.deliveryType .invoiceType .invoiceContent .deliveryList .deliveryInfo .cu-form-group picker .picker {
  width: 94rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 4px;
  border: 1px solid #0d80f7;
  color: #333333;
  font-size: 12px;
  padding-right: 40rpx;
}
.deliveryType .invoiceType .invoiceContent .deliveryList .deliveryInfo .cu-form-group picker .picker .iconfold {
  position: absolute;
  font-size: 14px;
  top: 50%;
  right: 10rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.paymentType {
  width: 100%;
  height: 392rpx;
  padding: 30rpx 0rpx 30rpx 60rpx;
  background-color: #FFFFFF;
}
.paymentType .deliveryTitle {
  font-size: 14px;

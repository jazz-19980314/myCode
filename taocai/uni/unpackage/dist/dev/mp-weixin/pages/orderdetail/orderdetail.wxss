.container {
  width: 100%;
  height: 100%;
  background: #ebf5ff;
  padding: 30rpx;
}
.orderdetail {
  width: 690rpx;
  margin: 0 auto;
  background: #feffff;
  padding-bottom: 40rpx;
}
.orderdetail .order-title {
  height: 120rpx;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 120rpx;
  padding: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 2px dashed #CCE5FF;
  position: relative;
}
.orderdetail .order-title .order-num {
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}
.orderdetail .order-con {
  width: 100%;
  padding: 40rpx 40rpx 0 40rpx;
}
.orderdetail .order-con .order-det {
  width: 100%;
  height: 550rpx;
  border-radius: 6px;
  margin-top: 20rpx;
  position: relative;
  z-index: 10;
}
.orderdetail .order-con .order-det .bgc {
  width: 100%;
  height: 100%;
  border-radius: 6px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.orderdetail .order-con .order-det .bgcblack {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 4;
  background: black;
  border-radius: 6px;
  opacity: 0.8;
}
.orderdetail .order-con .order-det .order-main {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  padding: 30rpx 40rpx;
}
.orderdetail .order-con .order-det .order-main .order-price {
  height: 40rpx;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: white;
  line-height: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-bottom: 20rpx;
  z-index: 20;
}
.orderdetail .order-con .order-det .order-main .order-image {
  height: 156rpx;
}
.orderdetail .order-con .order-det .order-main .order-image image {
  width: 150rpx;
  height: 156rpx;
  border: 1px solid rgba(255, 255, 255, 0);
  border-radius: 4px;
  margin-left: 30rpx;
}
.orderdetail .order-con .order-det .order-main .order-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: white;
  margin-bottom: 10rpx;
}
.orderdetail .order-con .order-det .order-main .order-btn .order-btn1 {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #ff3543;
  color: #FFFFFF;
  border-radius: 2px;
}
.orderdetail .order-con .order-det .order-main .order-btn .order-btn2 {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: -webkit-linear-gradient(right, #0d80f7 0%, #02a0fe 100%);
  background: linear-gradient(270deg, #0d80f7 0%, #02a0fe 100%);
  border-radius: 2px;
  margin-left: 40rpx;
}
.orderdetail .order-con .order-det .order-main .order-beizhu {
  width: 100%;
  text-align: right;
  height: 28rpx;
  font-size: 10px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
  margin-top: 10rpx;
}


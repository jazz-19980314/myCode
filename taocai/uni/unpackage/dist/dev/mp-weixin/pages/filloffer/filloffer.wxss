.bigContent {
  width: 100%;
  height: 100vh;
  background: #f5faff;
  overflow: auto;
  padding-bottom: 140rpx;
}
.bigContent .main_container {
  background-color: #FFFFFF;
  width: 690rpx;
  margin: 40rpx auto;
  border-radius: 5px;
  box-shadow: -2px -2px 4px 0px rgba(229, 238, 255, 0.5), 2px 2px 4px 0px rgba(24, 79, 186, 0.2);
}
.bigContent .basicInfo {
  width: 690rpx;
  box-sizing: border-box;
  font-size: 14px;
  padding: 40rpx 40rpx 30rpx 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 20px;
  background: #feffff;
  border-radius: 10rpx 10rpx 0 0;
}
.bigContent .basicInfo view {
  margin-bottom: 20rpx;
}
.bigContent .basicInfo .firstline {
  font-size: 16px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #333333;
  line-height: 22px;
  padding-left: 40rpx;
  position: relative;
}
.bigContent .basicInfo .firstline .iconbasic {
  width: 8rpx;
  height: 36rpx;
  background: -webkit-linear-gradient(left, #0d80f7 0%, #02a0fe 100%);
  background: linear-gradient(90deg, #0d80f7 0%, #02a0fe 100%);
  border-radius: 2px;
  position: absolute;
  top: 4rpx;
  left: 0;
}
.bigContent .frominfo {
  width: 690rpx;
  padding: 30rpx 40rpx 40rpx 40rpx;
  box-sizing: border-box;
  background: #feffff;
  border-radius: 0  0 10rpx 10rpx;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 17px;
  margin: 0 auto;
}
.bigContent .frominfo .priceinfo,
.bigContent .frominfo .brandinfo,
.bigContent .frominfo .usermessage {
  height: 125rpx;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  border-bottom: 2rpx solid #EAEAEA;
  position: relative;
}
.bigContent .frominfo .priceinfo .tag-blue,
.bigContent .frominfo .brandinfo .tag-blue,
.bigContent .frominfo .usermessage .tag-blue {
  font-weight: bold;
  color: #0d80f7;
  line-height: 20px;
}
.bigContent .bottom_offer {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-shadow: 0px -1px 2px 0px rgba(0, 0, 0, 0.1);
  z-index: 100;
}
.bigContent .bottom_offer .bottom_left {
  width: 61.8%;
  height: 100rpx;
  padding: 30rpx;
  background: white;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 50rpx;
}
.bigContent .bottom_offer .bottom_right {
  position: absolute;
  top: -2rpx;
  right: 0;
  width: 38.2%;
  height: 102rpx;
  text-align: center;
  background: -webkit-linear-gradient(right, #0d80f7 0%, #02a0fe 100%);
  background: linear-gradient(270deg, #0d80f7 0%, #02a0fe 100%);
  font-size: 16px;
  box-shadow: 0px -1px 2px 0px rgba(0, 0, 0, 0.1);
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: white;
  line-height: 100rpx;
}
.spliceline {
  width: 610rpx;
  height: 20rpx;
  margin: 0 auto;
  background: #f5faff;
  border-radius: 5px;
}
.remark {
  height: 160rpx;
  width: 690rpx;
  padding: 20rpx 40rpx;
  margin: 20rpx auto;
  background: #feffff;
  border-radius: 10rpx;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.remark .tag-blue {
  font-weight: bold;
  color: #0d80f7;
  line-height: 20px;
}
.remark input {
  border-bottom: 2rpx solid #EAEAEA;
}


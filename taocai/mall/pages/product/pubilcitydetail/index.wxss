/* pages/product/pubilcitydetail/index.wxss */
/* 文章标题 */
.video-title {
	width: 100%;
	height: 150rpx;
	padding: 20rpx 30rpx;
	font-size: 16px;
	/* font-family: PingFangSC-Medium, PingFang SC; */
	font-weight: bold;
	color: rgba(51, 51, 51, 1);
	line-height: 24px;
}
.video-title .vt-top {
	margin-bottom: 20rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.video-cate{
	width: 100%;
	height: 88rpx;
	padding: 10rpx 30rpx;
	display: flex;
	justify-content: flex-start;
}
.video-cate image{
	width: 84rpx;
	height: 88rpx;
	margin-right: 30rpx;
}
.vc-right{
	width: 130rpx;
	height: 88rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	font-size:14px;
	/* font-family:PingFangSC-Regular,PingFang SC; */
	font-weight:400;
	color:rgba(51,51,51,1);
}
.vc-right1{
	font-size:10px;
	/* font-family:PingFangSC-Regular,PingFang SC; */
	font-weight:400;
	color:rgba(153,153,153,1);
}
.banner{
	width: 100%;
	height: 374rpx;
	padding: 0rpx 30rpx;
	margin-top: 40rpx;
}
.banner image{
	height: 100%;
	width: 100%;
}
.aticledetail{
	width: 100%;
	padding: 80rpx 30rpx;
}
.aticledetail view{
	font-size:12px;
	/* font-family:PingFangSC-Regular,PingFang SC; */
	/* font-weight:400; */
	color:rgba(102,102,102,1);
	line-height:24px;
	/* text-align: center; */
	text-indent: 1.5rem;
}
.aticledetail text{
	text-indent: 1.5rem;
}
.tuijian{
	width: 100%;
	padding: 0 30rpx;
}
.tuijian image{
	width: 100%;
	height: 100px;
	margin: 20rpx auto;
}
/* 视频推荐 */
.video-recommend {
	width: 100%;
	padding: 20rpx 30rpx;
}
.video-recommend .recommend-title{
	font-size:16px;
	/* font-family:PingFangSC-Medium,PingFang SC; */
	font-weight:600;
	color:rgba(51,51,51,1);
	line-height:22px;
	margin-bottom: 40rpx;
}
.video-recommend .vr-detail {
	width: 100%;
	height: 240rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 40rpx;
}
.vr-name{
	display: flex;
	justify-content: flex-start;
	margin-bottom: 24rpx;
	font-size:12px;
	/* font-family:PingFangSC-Regular,PingFang SC; */
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:20px;
}
.vr-name image{
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}
.vr-left {
	width: 430rpx;
	height: 100%;
}

.vr-title {
	width: 100%;
	/* height: 96rpx; */
	font-size: 16px;
	/* font-family: PingFangSC-Medium, PingFang SC; */
	font-weight: bold;
	color: rgba(51, 51, 51, 1);
	/* line-height: 24px; */
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	margin-bottom: 44rpx;
}

.vr-time text {
	font-size:12px;
	/* font-family:PingFangSC-Regular,PingFang SC; */
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:17px;
}

.vr-image {
	height: 120rpx;
	width: 200rpx;
	position: relative;
}

.vr-image image {
	width: 100%;
	height: 100%;
}
.vr-image view{
	font-size:12px;
	/* font-family:PingFangSC-Regular,PingFang SC; */
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:17px;
	margin-top: 20rpx;
}
/* pages/product/link/index.wxss */
.content {
	width: 100%;
	padding: 40rpx;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	align-items: center;
}

.condetail {
	width: 100%;
	height: 180rpx;
	background: rgba(255, 255, 255, 1);
	box-shadow: 0px 2px 4px 0px rgba(103, 18, 10, 0.05);
	border-radius: 2px;
	border: 1px solid rgba(234, 234, 234, 1);
	margin-bottom: 40rpx;
}

.cd-top {
	width: 100%;
	height: 120rpx;
	padding-left: 40rpx;
	display: flex;
	/* justify-content: space-around; */
	align-items: center;
}

.cd-top view {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin-left: 30rpx;
	width: 400rpx;
	font-size: 14px;
	/* font-family:PingFangSC-Regular,PingFang SC; */
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
}

.cd-top image {
	height: 72rpx;
	width: 72rpx;
}

.cd-bottom {
	width: 100%;
	height: 60rpx;
	padding-left: 40rpx;
	line-height: 60rpx;
	/* text-align: center; */
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	background: rgba(245, 250, 255, 1);
	border-radius: 0px 0px 2px 2px;
	font-size: 12px;
	/* font-family:PingFangSC-Regular,PingFang SC; */
	font-weight: 400;
	color: rgba(13, 128, 247, 1);
}

.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	box-sizing: border-box;
}

.scrolltxt {
	padding: 0 20rpx;
	background: #f8f8f8;
}

.marquee_box {
	position: relative;
	color: #333;
	height: 90rpx;
	display: block;
	overflow: hidden;
}

.marquee_text {
	white-space: nowrap;
	position: absolute;
	top: 0;
	font-size: 14px;
	height: 90rpx;
	line-height: 90rpx;
}

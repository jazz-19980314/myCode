	<view class='wrapper bg-hot'>
		<view class="cu-bar text-white">
			<view class='action text-bold'>
				<text class='cuIcon-hot'></text> 热销单品
			</view>
			<navigator hover-class="none" url='/pages/goods/goods-list/index?type=2' class='action'>
				更多<text class='cuIcon-right'></text>
			</navigator>
		</view>
		<view class='wrapper-list bg-white radius'>
			<scroll-view class="scroll-view_x" scroll-x style="width:auto;overflow:hidden;">
				<block wx:for="{{goodsListHot}}" wx:key="index">
					<navigator hover-class="none" url='/pages/goods/goods-detail/index?id={{item.id}}' class='item'>
						<view class='img-box'>
							<image src="{{item.picUrls[0] ? item.picUrls[0] : '/public/img/no_pic.png'}}"></image>
						</view>
						<view class='text-cut margin-xs'>{{item.name}}</view>
						<view class="text-price text-red margin-xs">{{item.priceDown}}</view>
					</navigator>
				</block>
			</scroll-view>
		</view>
	</view>

	<view class='wrapper bg-white margin-top-sm'>
		<view class="cu-bar bg-white">
			<view class='action text-bold'>
				<text class='cuIcon-new text-blue'></text> 新品首发
			</view>
			<navigator hover-class="none" url='/pages/goods/goods-list/index?type=1' class='action'>
				更多<text class='cuIcon-right'></text>
			</navigator>
		</view>
		<view class='wrapper-list'>
			<scroll-view class="scroll-view_x" scroll-x style="width:auto;overflow:hidden;">
				<block wx:for="{{goodsListNew}}" wx:key="index">
					<navigator hover-class="none" url='/pages/goods/goods-detail/index?id={{item.id}}' class='item'>
						<view class='img-box'>
							<image src="{{item.picUrls[0] ? item.picUrls[0] : '/public/img/no_pic.png'}}"></image>
						</view>
						<view class='text-cut margin-xs'>{{item.name}}</view>
						<view class="text-price text-red margin-xs">{{item.priceDown}}</view>
					</navigator>
				</block>
			</scroll-view>
		</view>
	</view>

	<!-- <ad unit-id="adunit-80d788ab8518b5b3"></ad> -->

	<view class="cu-bar justify-center bg-white margin-top-sm">
		<view class='action border-title'>
			<text class='text-orange cuIcon-like'></text> 猜你喜欢
			<text class="bg-gradual-orange" style="width:3rem"></text>
		</view>
	</view>
	<goods-row goodsList="{{goodsList}}" />
	<view class="cu-load bg-gray {{loadmore?'loading':'over'}}"></view>

	<!-- 我想要开商城 -->
	<view class="cu-bar wantMall">
		<view class="wantMallBtn bg-blue" bindtap="showModal" data-target="Modal">我要开商城</view>
	</view>
	<view class="cu-modal {{modalName=='Modal'?'show':''}}">
		<view class="cu-dialog" style="border-radius: 6px;">
			<view class="cu-bar justify-end text-white" style="height: 88rpx;background:linear-gradient(180deg,rgba(245,100,73,1) 0%,rgba(231,52,35,1) 100%);">
				<view class="content">填写联系方式</view>
				<view class="action" bindtap="hideModal">
					<text class="cuIcon-close text-white text-xls" style="font-size: 25px;"></text>
				</view>
			</view>
			<view class="padding-xl" style="background-color: rgba(246,248,251,1);">
				<from style="border-radius: 4px;">
					<view class="cu-form-group" style="text-align: left;height: 52px;padding: 0 30px;">
						<view class="title">姓名:</view>
						<input placeholder="请输入姓名" value="{{name}}" bindblur="nameBlur" placeholder-style="font-size:14px;"></input>
					</view>
					<view class="cu-form-group" style="text-align: left;height: 52px;padding: 0 30px;">
						<view class="title">公司:</view>
						<input placeholder="请输入公司名称" value="{{company}}" bindblur="companyBlur" placeholder-style="font-size:14px;"></input>
					</view>
					<view class="cu-form-group" style="text-align: left;height: 52px;padding: 0 30px;">
						<view class="title">电话:</view>
						<input placeholder="请输入联系电话" value="{{phone}}" type="number" bindblur="phoneBlur" placeholder-style="font-size:14px;"></input>
					</view>
				</from>
				<view style="position: relative;width: 100%;height: 96px;display: flex;justify-content: center;align-items: center;">
					<view class="submitInfo" bindtap="submitInfo" style="">
						提交
					</view>
					<view class="btnShadow"></view>
				</view>
				<view style="margin-top: 3px;text-align: left;">
					咨询电话：<text style="color: #E73423;">{{phoneNumber}}</text>
					<button class="cu-btn sm" style="margin-left: 20rpx;" bindtap="copyData" data-data="{{phoneNumber}}">复制</button>
				</view>
			</view>
		</view>
	</view>
</view>

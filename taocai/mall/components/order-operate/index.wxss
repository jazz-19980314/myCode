@import "/app.wxss";
.payment{
	width: 630rpx;
	height: 140rpx;
	text-align: left;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	font-size:16px;
	font-family:PingFangSC-Regular,PingFang SC;
	font-weight:400;
	color:rgba(231,52,35,1);
	margin: 0 auto;
	margin-top: 40rpx;
	background-color: #fff;
	border-bottom: 1px solid rgba(231,52,35,1);
}
.texttitle{
	position: relative;
	padding-left: 70rpx;
	text-align: left;
}
.texttitle image{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	top: 50%;
	left: 0;
	transform: translateY(-50%);
}
.payment input{
	font-size:18px;
	font-family:Roboto-Regular,Roboto;
	font-weight:400;
	color:rgba(51,51,51,1);
	/* margin-bottom: 10rpx; */
}
.otherInfo{
	width:100%;
	background-color: #fff;
	padding: 30rpx;
	height:300rpx;
}
.otherInfo .beizhu{
	margin-top: 20rpx;
	width: 100%;
	height:140rpx;
	border-radius:2px;
	border:1px solid rgba(234,234,234,1);
	padding: 10rpx;
}
.beizhu textarea{
	padding: 10rpx;
	width: 100%;
	height: 100%;
}
.beizhu input{
	border: 1px solid #999;
	border-radius: 4px;
	width: 100%;
	height: 100%;
}
.submitbtn{
	width: 610rpx;
	height: 80rpx;
	margin: 40rpx auto;
	text-align: center;
	line-height: 80rpx;
	position: relative;
	font-size:16px;
	font-family:PingFangSC-Medium,PingFang SC;
	font-weight:500;
	color:rgba(255,255,255,1);
}
.submitbtn view{
	width: 100%;
	height: 100%;
	border: 1px solid rgba(255,255,255,0);
	border-radius: 4px;
}
.bgcbtn{
	width: 100%;
	height: 100%;
	background-color: rgba(255,255,255,0.7);
	position: absolute;
	top: 0;
	left: 0;
}